@model MVC_First_Task.Models.Branch
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
        <img src="~/resources/images/logo.gif" width="200" />
    </div>
    <div class="col-xl-1 col-lg-1 col-md-1 col-sm-12 col-12">

    </div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <p style="font-weight:bold ; font-size:1.25vw; margin-top : 5%;">Branches Configurations</p>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-xl-1 col-lg-1 col-md-1 col-sm-12 col-12">

    </div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
        <p style="font-weight:bold ; font-size:1.25vw; margin-top : 5%;">Branches</p>
    </div>
</div>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Branch</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.BranchID)
    @for (int i = 0; i < Model.Counters.Count; i++)
    {
        @Html.HiddenFor(model => Model.Counters[i].CounterID)
        @Html.HiddenFor(model => Model.Counters[i].BranchID)
        @Html.HiddenFor(model => Model.Counters[i].Name)
        @Html.HiddenFor(model => Model.Counters[i].Number)
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descriptions, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Descriptions, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descriptions, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConuntersNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ConuntersNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ConuntersNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
